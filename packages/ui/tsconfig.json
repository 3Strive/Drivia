{
  "extends": "@repo/typescript-config/react-library.json",
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"]
    },
    "declarationDir": "dist",
    "outDir": "dist"
  },
  "include": ["src", "turbo"]
}
